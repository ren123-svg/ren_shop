#app
  width 100%
  height 100%
  background #f5f5f5
  position relative
  .footer_guide  //footer
    top-border-1px(#e4e4e4)
    position: fixed
    z-index 100
    left 0
    right 0
    bottom 0
    background-color #fff
    width 100%
    height 50px
    display flex
    .guide_item
      display flex
      flex 1
      text-align center
      margin 5px
      color #999999
      &.on
        color #02a744
      span
        font-size: 12px
        margin-bottom: 2px
        margin-bottom: 2px
        .iconfont
          font-size: 22px
  .content
    >div
      display: none;
      &.on
        display: block;
      >section
        .header //头部公共css
          background-color: #02a774
          position: fixed;
          z-index: 100;
          left: 0;
          top: 0;
          width: 100%;
          height: 45px;
          .header_search
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            width: 10%;
            height: 50%;
            .iconfont
              font-size: 22px;
              color: #fff;
          .header_title
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            width: 30%;
            color: #fff;
            font-size: 22px;
            text-align: center;
        &.msite //首页
          width: 100%;
          .msite_header
            background-color: #02a774;
            position: fixed;
            z-index: 100;
            left: 0;
            top: 0;
            width: 100%;
            height: 45px;
            .header_search
              position: absolute;
              left: 15px;
              transform: translateY(-50%);
              width: 10%;
              height: 50%;
              .icon-sousou
                font-size: 25px;
                color: #fff;
            .header_title
              position: absolute;
              top: 50%;
              left: 50%;
              transform: translate(-50%,-50%)；
              width: 50%;
              color: #fff;
          .msite_nav
            bottom-border-1px(#e4e4e4);
            margin-top: 45px;
            height: 200px;
            background: #fff;
            .swiper-container
              width: 100%;
          .msite_shop_list
            top-border-1px(#e4e4e4);
            margin-top: 10px;
            background: #fff;
        //    .shop_header
        //&.search
        //&.order
        //&.profile
  >.off
    display: none
  >.on
    position: fixed;
    top: 0;
    left: 0;
    right: 0;


